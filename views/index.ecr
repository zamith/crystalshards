<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Crystalshards</title>
    <link rel="stylesheet" href="/css/application.css">
  </head>

  <body onload="document.forms['search'].elements['search'].select();">
    <section class="main-info">
      <div class="container">
        <h1 class="title">Crystalshards</h1>

        <p class="more-info">There are a total of <span class="repo-count"><%= repos_count %></span> shards</p>
      </div>
    </section>

    <section class="repos">
      <div class="container">
        <div class="nav">
          <form id="search" method="get" action="/">
            Sort by:
              <select name="sort" onchange="this.form.submit()">
                <% SORT_OPTIONS.each_with_index do |target_sort, index| %>
                <option <%= "selected" if sort == target_sort %>>
                   <%= target_sort %>
                </option>
                <% end %>
              </select>

            Filter:
              <input type="search" id="search" name="filter" value="<%= filter %>" maxlength="20"/>
          </form>
        </div>

        <ul>
          <% crystal_repos.each do |repo| %>
            <li class="repo">
            <a href="<%= repo.html_url %>"><%= repo.name %></a>

            <% if sort == "stars" %>
              (<%= repo.watchers_count %> stars)
            <% elsif sort == "updated" %>
              (<%= human_time(repo.pushed_at) %>)
            <% elsif sort == "forks" %>
              (<%= repo.forks %> forks)
            <% end %>

            <% unless repo.description.try &.strip.empty? %>
             - <%= repo.description %>
            <% end %>
            </li>
          <% end %>
        </ul>
    </div>
    </section>
  </body>
</html>
